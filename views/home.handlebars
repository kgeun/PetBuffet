<div class="container">
  <div class="card-deck mb-3 text-center">
    <div class="card mb-4 box-shadow">
      <div class="card-header">
        <div class="row">
          <div class="col-2">최신순</div>
          <div class="col-6"><span class="my-0 font-weight-normal">사료명</span></div>
          <div class="col-2"><span class="my-0 font-weight-normal">영양점수</span></div>
          <div class="col-2"><span class="my-0 font-weight-normal">소비자평점</span></div>
        </div>
      </div>

      <div class="card-body">
        {{#each result}}
        <a href="/petfood_info/{{petfood_id}}?current_page={{../current_page}}" class="black-color-link">
        <div class="row">
          <div class="col-md-2 col-sm-12"><img style="width:70px;" src="/petfood_images/{{petfood_photo_addr}}"/></div>
          <div class="col-md-6 col-sm-12"><div class="petfood-main-list-content"><h5 class="my-0 font-weight-normal">{{petfood_name}}</h5></div></div>
          <div class="col-md-2 col-sm-12"><div class="petfood-main-list-content"><h4 class="my-0 font-weight-normal">{{nutrition_score}}</h4></div></div>
          <div class="col-md-2 col-sm-12"><div class="petfood-main-list-content"><h4 class="my-0 font-weight-normal">{{customer_score}}</h4></div></div>
        </div>
        </a>
         {{#unless @last}}<hr>{{/unless}}
        {{/each}}
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-12">
        <nav aria-label="Page navigation example" style="float:right;">
          <ul class="pagination">
            <li class="page-item {{#if first_page}} disabled{{/if}}">
              <a class="page-link" href="/petfood_list/{{prev_page}}" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
              </a>
            </li>
            {{#each paging}}
            <li class="page-item {{#if paging_currentpage}} disabled {{/if}}"><a class="page-link" href="/petfood_list/{{paging_page}}">{{paging_page}}</a></li>
            {{/each}}
            <li class="page-item {{#if last_page}}disabled{{/if}}">
              <a class="page-link" href="/petfood_list/{{next_page}}" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
              </a>
            </li>
          </ul>
        </nav>
      </div>
    </div>
  </div>

