<div class="jumbotron">
  <div class="container">
    <form action="/review/all_list" method="get">
      <div class="form-row align-items-center">
        <div class="col-11">
                <input name="query" class="form-control form-control-lg" type="text" placeholder="리뷰 제목 또는 내용" value="{{query}}">
        </div>
        <div class="col-1">
                <button type="submit" class="btn btn-lg btn-primary mr-2">검색</button>
        </div>
      </div>
  </div>
</div>
<div class="container">

    {{#each all_review_item}}
    <a href="/review/content/{{petfood_review_id}}" style="color:inherit; text-decoration:inherit;">
        <div class="card-group box-shadow row mb-4">
          <div class="card col-10">
            <div class="card-body">
              <h5 class="card-title">{{petfood_review_title}}</h5>
              <p class="card-text">{{petfood_review_content}}</p>
            </div>
            <div class="card-footer" style="background-color:white;">
                <p class="card-text"><small class="text-muted">글쓴이 : {{username}} / {{creation_datetime}}</small></p>
            </div>
          </div>
          <div class="card col-2" style="background-color:rgb(245, 245, 247);">
            <div class="card-body text-center">
              <img class="mb-2" style="width:100%;" src="http://{{../image_url}}/petfood_images/{{petfood_photo_addr}}"/>
              <p class="card-text"><span><small class="text-muted">{{petfood_name}}</small></span></p>
            </div>
          </div>
        </div>
    </a>
    {{/each}}
</div>

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="text-center">
                <nav style="display: inline-block;">
                    <ul class="pagination">
                      <li class="page-item {{#if first_page}} disabled{{/if}}">
                        <a class="page-link" href="/review/all_list/{{petfood_info.petfood_id}}?page={{prev_page}}&{{query_string}}" aria-label="Previous">
                          <span aria-hidden="true">&laquo;</span>
                          <span class="sr-only">Previous</span>
                      </a>
                      </li>
                      {{#each paging}}
                      <li class="page-item {{#if paging_currentpage}} disabled {{/if}}"><a class="page-link" href="/review/all_list?page={{paging_page}}&{{../query_string}}">{{paging_page}}</a></li>
                      {{/each}}
                      <li class="page-item {{#if last_page}}disabled{{/if}}">
                        <a class="page-link" href="/review/all_list/{{petfood_info.petfood_id}}?page={{next_page}}&{{query_string}}" aria-label="Next">
                          <span aria-hidden="true">&raquo;</span>
                          <span class="sr-only">Next</span>
                        </a>
                      </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
